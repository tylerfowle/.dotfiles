# POWERLINE THEME
#
# Powerline Block - Tmux Theme
# Created by Jim Myhrberg <contact@jimeh.me>.
#
# Inspired by vim-powerline: https://github.com/Lokaltog/powerline
#
# Requires terminal to be using a powerline compatible font, find one here:
# https://github.com/Lokaltog/powerline-fonts
#

# Move status bar to top of window
set -g status-position top

# Status update interval
set -g status-interval 1

# Basic status bar colors
set -g status-fg colour240
set -g status-bg colour235  # same as window bg

theme_primary_color="colour11"
theme_secondary_color="colour1"

# Left side of status bar
set -g status-left-bg $theme_primary_color
set -g status-left-fg colour233
set -g status-left-length 150
set -g status-left " #{pane_current_path} #[fg=$theme_primary_color,bg=colour235]"

# Right side of status bar
set -g status-right-bg $theme_primary_color
set -g status-right-fg colour233
set -g status-right-length 150
set -g status-right ""

# Window status
set -g window-status-format "#[fg=$theme_primary_color,bg=colour235]#[fg=colour232,bg=$theme_primary_color] #S:#I:#P:#W#F "
set -g window-status-current-format "#[fg=colour1,bg=colour235]#[fg=colour235,bg=$theme_secondary_color] #W#F #[fg=$theme_primary_color,bg=colour1]#[fg=colour232,bg=$theme_primary_color] #S:#I:#P "

# Current window status
set -g window-status-current-bg $theme_primary_color
set -g window-status-current-fg colour233

# Window with activity status
set -g window-status-activity-bg $theme_primary_color # fg and bg are flipped here due to
set -g window-status-activity-fg colour233 # a bug in tmux

# Window separator
set -g window-status-separator "#[fg=$theme_primary_color,bg=colour235]"

# Window status alignment
set -g status-justify right

# Active pane border
set -g pane-active-border-bg default
set -g pane-active-border-fg $theme_primary_color

# Pane number indicator
set -g display-panes-colour colour233
set -g display-panes-active-colour colour245

# Clock mode
set -g clock-mode-colour $theme_primary_color
set -g clock-mode-style 24
set -g clock-mode-style 1

# Message
set -g message-bg $theme_primary_color
set -g message-fg black

# Command message
set -g message-command-bg colour233
set -g message-command-fg black

# Mode
set -g mode-bg $theme_primary_color
set -g mode-fg colour235
