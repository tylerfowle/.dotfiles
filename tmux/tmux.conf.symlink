# -- prefix key -------------------------------------------------------------------
# remap prefix to Control + a
set -g prefix C-k
# bind 'C-a C-a' to type 'C-a'
bind C-k send-prefix
unbind C-b


# -- display -------------------------------------------------------------------

set -g base-index 1         # start windows numbering at 1
setw -g pane-base-index 1   # make pane numbering consistent with windows

setw -g automatic-rename on # rename window to reflect current program
set -g renumber-windows on  # renumber windows when a window is closed

set -g set-titles on                        # set terminal title
set -g set-titles-string '#h'

# activity
set -g monitor-activity on
set -g visual-activity on

# color
set -g default-terminal "screen-256color"




# -- mouse -------------------------------------------------------------------

# enable mouse by default
set-option -g mouse on
# turn off with prefix M
bind-key M set-option -g mouse off \; display "Mouse: Off"
# turn on with prefix m
bind-key m set-option -g mouse on \; display "Mouse: On"


# -- keybinding -------------------------------------------------------------------

# Reload tmux config
bind r source-file ~/.tmux.conf \; display "Reloaded Config"

# pane traversal ijkl
bind-key i select-pane -U
bind-key j select-pane -L
bind-key k select-pane -D
bind-key l select-pane -R

# resize panes with IJKL
bind-key I resize-pane -U 10
bind-key J resize-pane -L 10
bind-key K resize-pane -D 10
bind-key L resize-pane -R 10

# swap panes
bind-key u swap-pane -U
bind-key o swap-pane -D

# split windows
bind-key h split-window -h -c '#{pane_current_path}'
bind-key v split-window -v -c '#{pane_current_path}'

# easier to remember than x
bind-key W kill-pane


# -- functions -------------------------------------------------------------------

bind-key H run "cd ."


# -- theme -------------------------------------------------------------------
##### Colors
# light green colors
# 114
# 150


#set inactive/active window styles
set -g window-style 'bg=colour0'

# Split
set-option -g pane-active-border-fg green
set-option -g pane-active-border-bg default
set-option -g pane-border-fg red
