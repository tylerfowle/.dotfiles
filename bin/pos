#!/bin/bash

#pos application windows by giving an ApplicationName, x value, and y value
#pos AppName x y
	IFS='%'
	appName="$1"
	osascript -e 'tell application "System Events"
		try
			tell process '\"$appName\"'
				reopen
				activate
				set frontmost to true

				if number of windows is 0 then
					keystroke "n" using command down
					delay .5
				end

				set position of window 1 to {'\"$2\"', '\"$3\"'}
			end tell
		end try
	end tell
'
