#!/usr/bin/env node
var fs = require('fs');


function listDirectories(dir){
  let dirs = []
  return fs.readdirSync(dir, function(err, f) {
    dirs = fs.statSync(f).isDirectory();
  });
}


let dirs = {
  designs: listDirectories('./designs/'),
  layouts: listDirectories('./layouts/')
}


console.log(dirs.designs);
console.log(dirs.layouts);

dirs.layouts.forEach(function(f){
  console.log(__dirname,f);
  console.log(listDirectories(__dirname,f));
});
