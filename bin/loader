#!/usr/bin/env bash

packs=$(find . -name package.json -not -path "**/node_modules/*")
count=0

for f in $packs; do
  count=$((count + 1))
  (
  echo $count
  dirnam="$(dirname "$f")"
  dir="${dirnam#*/*/}"

  jq ".name=\"${dir}\"" "${f}" | sponge "${f}"

  #     dir="$(dirname "${d}")"
  #     cd "$dir"
  #     echo "$dir"
  #     yarn install --silent
  #     yarn upgrade
  #     echo "$dir"
  #     echo "$dir" >> ~/Desktop/yarn-audit.logs
  #     yarn audit >> ~/Desktop/yarn-audit.logs
  )
done
