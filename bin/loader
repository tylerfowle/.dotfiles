#!/usr/bin/env bash

function noder() {
packs=$(find . -name package.json -not -path "**/node_modules/*" -not -path "**/**/subdesigns/**/*")
count=0

for f in $packs; do
  count=$((count + 1))
  (
  dirnam="$(dirname "$f")"
  dir="${dirnam#*/*/}"
  dir="$(basename "$dir")"

  echo $count $dirnam $dir

  jq ".name=\"${dir}\"" "${f}" | sponge "${f}"

  #     dir="$(dirname "${d}")"
  #     cd "$dir"
  #     echo "$dir"
  #     yarn install --silent
  #     yarn upgrade
  #     echo "$dir"
  #     echo "$dir" >> ~/Desktop/yarn-audit.logs
  #     yarn audit >> ~/Desktop/yarn-audit.logs
  )
done
}




function looper() {
dirs=$(find . -type d -name "np_*")

for d in $dirs; do
  (
  cd $d
  pwd
  . fpm $1
  )
done
}


noder
